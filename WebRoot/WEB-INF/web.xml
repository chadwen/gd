<?xml version="1.0" encoding="UTF-8"?>  
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://java.sun.com/xml/ns/javaee" 
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
id="WebApp_ID" version="2.5">  

 

	<display-name>gd</display-name>  
	<!-- <welcome-file-list>  
    	<welcome-file>index.jsp</welcome-file>  
	</welcome-file-list>   -->
    
	<!-- 加载所有的配置文件 -->  
	<context-param>  
    	<param-name>contextConfigLocation</param-name>  
		<param-value>classpath:config/spring/spring-common.xml;classpath:config/spring/spring-mvc.xml</param-value>
		<!-- 使用下面这一行代码，只加载spring-common.xml也可以。是因为后一个配置文件在下面的servlet中加载了，可以不用再这里加载？ --> 
		<!-- <param-value>classpath:config/spring/spring-common.xml</param-value> -->
	</context-param>

	<!-- 配置Spring监听 -->  
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:config/spring/log4j.properties</param-value>
	</context-param>

	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>gd.root</param-value>
	</context-param>

	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
    
